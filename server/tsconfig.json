{
    "compilerOptions": {
        "target": "ES2018" /* Specify your target ECMAScript version */,
        "module": "CommonJS" /* Specify module code generation */,
        "strict": true /* Enable all strict type-checking options */,
        "esModuleInterop": true /* Enable emit interoperability between CommonJS and ES Modules */,
        "resolveJsonModule": true /* Enable JSON module resolution */,
        "outDir": "./dist" /* Redirect output structure to the directory */,
        "baseUrl": "." /* Base directory to resolve non-relative module names */,
        "paths": {
            "@/*": ["src/*"],
            "@shared/*": ["../shared/*"]
        }
    },
    "include": ["src/**/*.ts" /* Specify your source files */]
}
